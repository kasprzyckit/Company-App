                  </ComboBox>
               </children>
            </VBox>
            <BorderPane prefHeight="200.0" prefWidth="200.0">
               <center>
                  <Button fx:id="hiringButton" mnemonicParsing="false" text="Edit hiring conditions" BorderPane.alignment="CENTER" />
               </center>
            </BorderPane>
         </children>
      </VBox>
   </right>
   <bottom>
      <HBox alignment="CENTER_RIGHT" prefHeight="40.0" prefWidth="200.0" spacing="5.0" BorderPane.alignment="CENTER_RIGHT">
         <children>
            <Label fx:id="errorText" text="Error" textFill="RED" />
            <Button mnemonicParsing="false" onAction="#cancelAction" text="Cancel" />
            <Button mnemonicParsing="false" onAction="#saveAction" text="Save" />
         </children>
         <padding>
            <Insets bottom="5.0" right="10.0" />
         </padding>
      </HBox>
   </bottom>
