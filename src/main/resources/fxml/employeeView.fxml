                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" />
                     </VBox.margin>
                  </Label>
                  <ChoiceBox fx:id="employeeTypeBox" prefWidth="220.0">
                     <VBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </VBox.margin>
                  </ChoiceBox>
               </children>
            </VBox>
         </children></VBox>
   </left>
   <right>
      <VBox prefHeight="100.0" prefWidth="230.0" BorderPane.alignment="CENTER">
         <children>
            <VBox prefWidth="100.0">
               <children>
                  <Label text="Last Name">
                     <padding>
                        <Insets top="5.0" />
                     </padding>
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="lastNameField">
                     <VBox.margin>
