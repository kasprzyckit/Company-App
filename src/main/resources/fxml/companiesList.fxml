<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CompaniesListController">
    <top>
        <BorderPane>
            <right>
                <Button mnemonicParsing="false" text="Quit" underline="true" BorderPane.alignment="CENTER" />
            </right>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <BorderPane.margin>
                <Insets right="10.0" />
            </BorderPane.margin>
            <left>
                <Button mnemonicParsing="false" text="Create new company" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets bottom="10.0" left="10.0" top="10.0" />
                    </BorderPane.margin>
                </Button>
            </left>
            <center>
                <HBox alignment="CENTER" spacing="5.0" BorderPane.alignment="CENTER">
                    <children>
                        <Button alignment="CENTER" disable="true" mnemonicParsing="false" text="Edit" />
                        <Button disable="true" mnemonicParsing="false" text="Delete" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" right="45.0" top="10.0" />
                    </padding>
                </HBox>
            </center>
        </BorderPane>
    </top>

    <center>

    </center>
   <left>
      <TableView prefHeight="405.0" prefWidth="250.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn prefWidth="199.0" text="Companies" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </left>
   <center>
      <BorderPane prefHeight="200.0" prefWidth="300.0" BorderPane.alignment="CENTER">
         <center>
            <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
         </center>
         <top>
            <VBox alignment="TOP_CENTER" prefWidth="100.0">
               <children>
                  <Label alignment="CENTER" text="Company Name" textAlignment="CENTER">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Label text="Director name" />
                  <Label text="Number of employees" />
               </children>
            </VBox>
         </top>
      </BorderPane>
   </center>

</BorderPane>
